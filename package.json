{
  "name": "sfportal",
  "version": "1.0.0",
  "description": "Run Structured Finance Portal CLI commands.",
  "main": "bin/cli",
  "directories": {
    "test": "tests"
  },
  "bin": "bin/cli",
  "scripts": {
    "make": "npm run clean && npm i && npm run build && npm run test",
    "start": "bin/cli",
    "build": "prettier -w ./src && npm run compile",
    "test": "npm run compile && jest --coverage --verbose",
    "compile": "tsc",
    "compile:w": "tsc -w",
    "clean": "rm -rf dist/ && rm -rf node_modules/ && rm -rf logs/ && rm -rf coverage/"
  },
  "author": "SFPortal",
  "dependencies": {
    "update-notifier": "^5.0.1",
    "yargs": "^16.2.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.20",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "typescript": "latest"
  }
}